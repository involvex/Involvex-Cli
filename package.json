{
  "name": "@involvex/involvex-cli",
  "version": "1.5.1",
  "description": "Windows System Administration Toolkit - TypeScript Edition",
  "keywords": [
    "cli",
    "windows",
    "system-administration",
    "package-manager",
    "system-tools"
  ],
  "homepage": "https://github.com/involvex/Involvex-Cli#readme",
  "bugs": {
    "url": "https://github.com/involvex/Involvex-Cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/involvex/Involvex-Cli.git"
  },
  "license": "MIT",
  "author": "InvolveX",
  "main": "src/index.ts",
  "bin": {
    "involvex-cli": "dist/index.js"
  },
  "scripts": {
    "prebuild": "bun run format && bun run lint:fix && bun run typecheck",
    "build": "bun build --target node --outfile dist/index.js src/index.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "dev": "bun run src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ignore-pattern node_modules/ --ignore-pattern dist/ --ignore-pattern _tests_/",
    "lint:fix": "eslint src --fix --ignore-pattern node_modules/ --ignore-pattern dist/ --ignore-pattern _tests_/",
    "release": "bun run build && bun pm version patch && npm publish --access public",
    "release:major": "npm run build && npm version major && npm publish --access public",
    "release:minor": "bun run build && bun pm version minor && npm publish --access public",
    "start": "bun run dist/index.js",
    "test": "jest --max-old-space-size=12288 --runInBand --passWithNoTests",
    "test:build": "jest --testPathIgnorePatterns=CacheService.test.js,StorageManagerService.test.js --max-old-space-size=8192",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/blessed": "^0.1.27",
    "@types/commander": "^2.12.5",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "discord-rpc": "^4.0.1",
    "express": "^5.2.1",
    "fs-extra": "^11.3.3",
    "inquirer": "^13.2.2",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1",
    "ora": "^9.3.0",
    "ping": "^1.0.0",
    "typescript-eslint": "^8.55.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.3",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-sort-imports": "^1.8.10",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
